{
  "name": "buysial-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "$schema": "https://json.schemastore.org/package.json",
  "scripts": {
    "dev": "node ./node_modules/vite/bin/vite.js",
    "build": "node ./node_modules/vite/bin/vite.js build",
    "cap:sync": "node ./node_modules/@capacitor/cli/bin/capacitor sync",
    "cap:sync:android": "node ./node_modules/@capacitor/cli/bin/capacitor sync android",
    "cap:open:android": "node ./node_modules/@capacitor/cli/bin/capacitor open android",
    "android:bundle:release": "bash ./android/gradlew -p android bundleRelease",
    "android:apk:release": "bash ./android/gradlew -p android assembleRelease",
    "release:aab": "npm run build && npm run cap:sync:android && npm run android:bundle:release",
    "preview": "node ./node_modules/vite/bin/vite.js preview",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md}\""
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@emran-alhaddad/saudi-riyal-font": "^1.1.0",
    "@heroicons/react": "^2.2.0",
    "firebase": "^12.9.0",
    "html2canvas": "^1.4.1",
    "json2csv": "^6.0.0-alpha.2",
    "jspdf": "^2.5.2",
    "libphonenumber-js": "^1.12.15",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-phone-number-input": "^3.4.12",
    "react-router-dom": "^6.26.1",
    "recharts": "^3.6.0",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/helper-compilation-targets": "^7.27.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.0",
    "@tailwindcss/typography": "^0.5.18",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "autoprefixer": "^10.4.21",
    "baseline-browser-mapping": "^2.9.11",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.13",
    "vite": "^5.4.1"
  }
}
